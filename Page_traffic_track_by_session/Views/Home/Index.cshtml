@{
    ViewData["Title"] = "Index Home Page";
}

<div class="text-center">
    <h1>Index </h1>
    <h1>@ViewBag.Greetingmessage</h1>
    <h1> Previous page:  @ViewBag.Nameofpreviouspage</h1>
    <h1 class="display-4">Coming from page @ViewBag.Comingfrompage</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@section Scripts{



    <script>

        window.addEventListener('load', (event) => {
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/Home/Changecomingfrompageinfo', true);
            xhr.setRequestHeader('Content-type', 'application/x-www-form-urlencoded');
            xhr.onload = function () {
                // do something to response
                console.log(this.responseText);
            };
            xhr.send('jumpedfrompagename=index');
        });


    </script>

}